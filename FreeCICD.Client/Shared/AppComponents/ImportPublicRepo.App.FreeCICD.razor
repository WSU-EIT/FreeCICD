    private string FormatSize(long sizeKB)
    {
        if (sizeKB < 1024) return $"{sizeKB} KB";
        if (sizeKB < 1024 * 1024) return $"{sizeKB / 1024.0:F1} MB";
        return $"{sizeKB / (1024.0 * 1024.0):F1} GB";
    }

